# include <stdio.h> 
# include <stdlib.h> 
	int main (){

		int W;
		char ch;

		printf("請輸入正整數:\n");
		while (1){		
			if (scanf("%d", &W) != 1 || W <= 0) {
				printf("請重新輸入正整數:\n");	
			}else{
				ch=getchar();
				if (ch=='\n'){
					break;
				}else
					printf("請重新輸入正整數:\n");
		}
	        while (getchar() != '\n'); }
		printf("輸入正確\n");
		return 0;
	}
